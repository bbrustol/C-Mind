<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/source_news_item_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Lorem ipsum dolor it Lorem ipsum dolor it Lorem ipsum dolor it Lorem ipsum dolor it"
            app:layout_constraintTop_toBottomOf="@+id/source_news_item_website"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/source_news_item_website"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/source_news_item_tv_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/source_news_item_website"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/source_news_item_button_website"
            android:textColor="#00ff00"
            android:background="@drawable/round_buttons"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="right" app:layout_constraintTop_toTopOf="@+id/source_news_item_tv_description"
            app:layout_constraintStart_toStartOf="@+id/source_news_item_tv_title"/>

</android.support.constraint.ConstraintLayout>
