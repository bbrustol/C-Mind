<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_everything_articles_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="5dp"
            tools:background="@color/colorAccent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_everything_articles_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            tools:text="Lorem ipsum dolor it Lorem ipsum dolor it Lorem ipsum dolor it Lorem ipsum dolor it"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_everything_articles_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            tools:text="Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf Lorem ipsum dolor it ame dsdsdsfsdfsdfsddsfdsfsdfsdfsdf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/item_everything_articles_tv_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:layout_weight=".7"
                    android:ellipsize="end"
                    tools:text="Bruno B O"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/item_everything_articles_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:layout_weight=".3"
                    android:gravity="end"
                    tools:text="22/22/22"/>

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
